{
	"manifest_version": 2,
	"name": "WebRoutes",
	"version": "1.0",

	"description": "passes browsing info to the Web Routes installation",
	"homepage_url": "https://github.com/brangerbriz/webroutes",
	"icons": {
		"48": "icons/icon-48.png",
		"96": "icons/icon-96.png"
	},

	"applications": {
		"gecko": {
			"id": "nbriz@brangerbriz.com",
			"strict_min_version": "42.0",
			"strict_max_version": "50.*"
		}
	},

	"permissions": [
		"activeTab",
		"webRequest"
	],

	"browser_action": {
		"default_icon": "icons/icon-32.png",
		"default_title": "WebRoutes"
	},

	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
				],
			"js": ["location-pass.js"]
		}
	]
}